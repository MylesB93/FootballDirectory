@page
@model FootballDirectory.Pages.Teams.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Team</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.LeagueID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.LeagueID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.StadiumID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.StadiumID)
        </dd>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Players</th>
                </tr>
                @foreach (var item in Model.Team.Players)
                {
                    <tr>
                        <td>
                            @item.FirstName @item.LastName
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Team?.TeamID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

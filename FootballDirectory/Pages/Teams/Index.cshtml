@page
@model FootballDirectory.Pages.Teams.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Team Name
            </th>
            <th>
                League Name
            </th>
            <th>
                Stadium Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Teams)
        {
            var league = Model.Leagues.Where(x => x.LeagueID == item.LeagueID).FirstOrDefault().Name;
            var stadium = Model.Stadiums.Where(x => x.StadiumID == item.StadiumID).FirstOrDefault().Name;

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @league
                </td>
                <td>
                    @stadium
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.TeamID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.TeamID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.TeamID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

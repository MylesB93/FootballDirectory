@page
@model FootballDirectory.Pages.Leagues.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Number of teams
            </th>
            <th>
                @Html.DisplayNameFor(model => model.League[0].Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.League) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfTeams)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.LeagueID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.LeagueID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.LeagueID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
